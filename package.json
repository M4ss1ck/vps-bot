{
  "scripts": {
    "start": "tsc -p ./tsconfig.json && node -r dotenv/config ./dist/main.js",
    "build": "tsc -p ./tsconfig.json",
    "watch": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node -r dotenv/config ./dist/main.js\""
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "grammy": "^1.9.0",
    "linux-shell-command": "^0.0.6"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4"
  }
}
